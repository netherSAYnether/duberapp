<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="org.duberapp.dubertest.MainActivity"
    android:background="@android:color/white" >

    <ImageView
        android:id="@+id/grower_image"
        android:layout_width="168dp"
        android:layout_height="179dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/grower" />


    <Button
        android:id="@+id/grower"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_alignBottom="@+id/grower_image"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        android:fontFamily="sans-serif"
        android:text="I'M A GROWER"
        android:textAllCaps="true"
        tools:layout_width="360dp"
        tools:textColor="@android:color/white"
        tools:textSize="20sp"
        android:onClick="@+id/grower"/>

    <ImageView
        android:id="@+id/smoker_image"
        android:layout_width="141dp"
        android:layout_height="149dp"
        android:layout_alignBottom="@+id/grower"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/smoker" />


    <Button
        android:id="@+id/smoker"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_alignBottom="@+id/smoker_image"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:onClick="@+id/smoker"
        android:text="I'M A SMOKER"
        tools:layout_marginRight="8dp"
        tools:textColor="@android:color/white"
        tools:textSize="20sp" />

</LinearLayout>
